<div class="container">
  <%= flash_messages_for(@clock_entry) %>
</div>

<div class="container" id="new-clock-entry">
  <%= link_to 'New Clock Entry', new_clock_entry_path, remote: true, class: 'btn btn-primary btn-sm' %>
</div>

<br>

<div class="container">
  <h1 class="active-event-title">
    <%= t('clock_entry_page.table_heading.title') %>
  </h1>

  <table class="table table-bordered table-hover" id="clock-entry">
    <thead>
      <tr>
        <th>Date</th>
        <th>Day</th>
        <th>Purpose</th>
        <th>Time In</th>
        <th>Time Out</th>
        <th colspan="3" class="">Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= render @clock_entries %>
    </tbody>
  </table>
</div>
